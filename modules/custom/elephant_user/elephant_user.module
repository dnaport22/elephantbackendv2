<?php

use Drupal\elephant_user\Service\ActivateAccount;
use Drupal\Core\Render\BubbleableMetadata;
use Drupal\Component\Render\PlainTextOutput;

define("VERIFICATION_URL", "http://myelephant.xyz/activation/");

/**
 * Implements hook_token_info().
 */
function elephant_user_token_info() {
  $type = array(
    'name' => t('Elephant User'),
    'needs-data' => 'elephant_user',
  );

  $elephant_user['user_verification'] = array(
    'name' => t('User Verififcation Link'),
  );

  return array(
    'types' => array('elephant_user' => $type),
    'tokens' => array('elephant_user' => $elephant_user),
  );
}

/**
 * Implements hook_tokens().
 */
function elephant_user_tokens($type, $tokens, array $data, array $options = array(), BubbleableMetadata
$bubbleableMetadata) {
  $replacements = array();
  if ($type == 'elephant_user') {
    foreach ($tokens as $name => $original) {
      switch ($name) {
        case 'user_verification':
          $replacements[$original] = $data['anything'];
          break;
      }
    }
  }
  return $replacements;
}

function getAccountVerificationUrl() {
  $token_service = \Drupal::token();
  $options = ['callback' => 'elephant_mail_tokens'];
  $data = array('anything' => 'THIS IS JUST A TEST');
  $token_service->replace('[elephant_user:elephant_user_verification]', $data);

}

function elephant_mail_tokens($replacement, $data, $options) {
  $replacement['elephant_user:elephant_user_verification'] = "This is now replaced";

}